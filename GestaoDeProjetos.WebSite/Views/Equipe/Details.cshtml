@model GestaoDeProjetos.Application.ViewModels.NotMapped.DetalhesEquipeViewModel
@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<h4>@Html.DisplayFor(model => model.Nome)</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataModificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataModificacao)
        </dd>
    </dl>
</div>
<div>
    <hr />
    @foreach (var pessoaEquipe in Model.PessoasEquipe)
    {
        <dl class="row">
            <dt class="col-sm-2">
                Nome: 
            </dt>
            <dd class="col-sm-10">
                @pessoaEquipe.Pessoa.Nome
            </dd>
        </dl>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Projetos
            </th>
            <th>
                Responsável
            </th>
            <th>
                Status
            </th>
            <th>
                Inicio
            </th>
            <th>
                Previsao
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projeto in Model.Projetos)
        {
            <tr>
                <td>
                    @projeto.Nome
                </td>
                <td>
                    @projeto.Coordenador.Nome
                </td>
                <td>
                    @projeto.Status
                </td>
                <td>
                    @projeto.DataInicio.ToShortDateString()
                </td>
                <td>
                    @projeto.DataPrevista.ToShortDateString()
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>

